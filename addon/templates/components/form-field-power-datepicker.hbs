{{extensible/form-field-label formField=formField}}
<div class="clr"></div>
<div class="field-controls validation-area">
  {{power-datetime-picker
    formField=formField
    value=formField.value
    dateButtonComponent=formField.dateButtonComponent
    dateButtonText=formField.dateButtonText
    minDate=formField.minDate
    maxDate=formField.maxDate
    timeSelect=formField.timeSelect
    name=formField.name
    timeButtonText=formField.timeButtonText
    dateFormat=formField.dateFormat
    calendarStartMonth=formField.calendarStartMonth
    allowNavigationOutOfRange=formField.allowNavigationOutOfRange
    defaultTime=formField.defaultTime
    defaultDate=formField.defaultDate
    onSelectDateTime=(action onUserInteraction)
  }}
  {{component inputIcon class="form-field-icon"}}
</div>
{{extensible/form-field-error formField=formField}}